rules_version = '2';

// Firebase Storage Security Rules for GolfClub Auctions
service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload images to their own listings folder
    match /listings/{userId}/{fileName} {
      // Allow read access to anyone (so listings can be viewed)
      allow read: if true;

      // Allow write access only to authenticated users uploading to their own folder
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
